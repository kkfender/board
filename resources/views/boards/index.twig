{% extends 'layouts/base.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div id="table">
        <table summary="トピック一覧" class="table table-striped">
          <tbody>
            <tr class="table-primary">
              <th style="width: 8%;">No.</th>
              <th style="width: 43%;">題名</th>
              <th style="width: 16%;">名前</th>
              <th style="width: 43%;">内容</th>
              <th style="width: 10%;">場所</th>
              <th style="width: auto;">登録日時</th>
            </tr>
            {% for board in boards %}
              <tr class="cycle1">
                <th style="width: 8%;">{{board.id}}</th>
                <th style="width: 43%;"><a href="{{route("boards.show", board.id)}}">{{board.title}}</a></th>
                <th style="width: 16%;">{{board.name}}</th>
                <th style="width: 16%;">{{board.body}}</th>
                <th style="width: 10%;">{{board.prefecture.name}}</th>
                <th style="width: auto;">{{board.created_at}}</th>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{% endblock %}